{
    "$schema": "https://turbo.build/schema.json",
    "globalPassThroughEnv": [
        "CI",
        "VERCEL",
        "VERCEL_ENV",
        "VERCEL_URL",
        "VERCEL_PROJECT_PRODUCTION_URL",
        "VERCEL_BRANCH_URL"
    ],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*"],
            "env": [
                "DATABASE_URL",
                "WORKER_URL",
                "WORKER_SECRET",
                "DISCORD_WEBHOOK_URL",
                "SCRAPECREATORS_API_KEY",
                "PORT",
                "LOG_LEVEL",
                "NODE_ENV"
            ],
            "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*"]
        },
        "typecheck": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*"]
        },
        "db:generate": {
            "cache": false
        },
        "db:push": {
            "cache": false
        }
    }
}
